@page
@model PRN231.CPR.Page.Pages.SemesterPages.CreateModel
@{
	Layout = "../Shared/_LayoutHome.cshtml";

}
<div class="container" style="padding:64px">
    <div class="main-content-account">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary pl-3">
                        Create Semester
                    </h2>
                    <hr />
                </div>

                <div class="mb-3">
                    <label class="control-label">Code</label>
                    <input asp-for="Semester.Code" class="form-control" />
                    <span asp-validation-for="Semester.Code" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="control-label">Start Date</label>
                    <input asp-for="Semester.StartDate" class="form-control"  type="date"/>
                    <span asp-validation-for="Semester.StartDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="control-label">End Date</label>
                    <input asp-for="Semester.EndDate" class="form-control" type="date" />
                    <span asp-validation-for="Semester.EndDate" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
                <a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back To List</a>
            </div>
            <div asp-validation-summary="All" class="text-bg-danger" style="color:red; font-weight:bold">@Model.Message</div>
        </form>
    </div>
</div>