@page
@model IndexModel
@{
    Layout = "Shared/_Login.cshtml";
}

                        <h3 class="form-title">Login</h3>
<form method="post" class="form-horizontal" asp-page="/Index">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" asp-for="Account.Email" >
                            </div>
                            <span asp-validation-for="Account.Email" class="text-danger"></span>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" asp-for="Account.Password">
                            </div>
                            <span asp-validation-for="Account.Password" class="text-danger"></span>
    <span style="font-weight:bold;margin-bottom: 20px;" class="text-danger forgot">@Model.Message</span>
                            <button class="btn signin">Login</button>
    <a asp-page="/AccountRecovery" class="forgot">Forgot Password</a>
                        </form>
                        <span class="separator">OR</span>
                        <ul class="social-links">
                        <li>
        <a asp-page="/Index" asp-page-handler="Google"><i class="fab fa-google"></i> Login with Email fpt </a>
                        </li>
                        </ul>